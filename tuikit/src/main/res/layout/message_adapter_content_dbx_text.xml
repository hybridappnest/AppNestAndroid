<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <TextView
        android:id="@+id/im_level"
        android:layout_width="4dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="#DF2024"
         />
    <TextView
        android:id="@+id/msg_body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dissolve_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="30dp"
        android:textSize="14sp"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_login_btn_bg"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/msg_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#80FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="100dp"
        android:layout_below="@+id/msg_body_title"
        android:paddingTop="4dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="6dp"
        android:textSize="16sp" />
   <LinearLayout
       android:id="@+id/custom_desc_layout"
       android:layout_width="match_parent"
       android:layout_marginBottom="10dp"
       android:layout_marginTop="5dp"
       android:minHeight="60dp"
       android:layout_below="@+id/msg_body_tv"
       android:orientation="vertical"
       android:layout_height="wrap_content">
   </LinearLayout>
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_white_bg"
    android:paddingStart="15dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_marginTop="8dp"
        android:id="@+id/layout_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tencent.qcloud.tim.uikit.modules.conversation.base.ConversationIconView
            android:id="@+id/conversation_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/conversation_unread"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="top|right"
            android:background="@drawable/shape_dot_bg2"
            android:gravity="center"
            tools:text="1"
            android:includeFontPadding="false"
            android:textColor="#fff"
            android:textSize="9dp" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="4dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_icon"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/conversation_title_root"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/conversation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="鼎保信"
                android:maxLength="10"
                android:textColor="@color/title_text_color"
                android:textSize="16.3sp" />

            <TextView
                android:id="@+id/tv_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_im_list_item_market_bg"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center"
                tools:text="公司群"
                android:textColor="@color/im_item_market_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/conversation_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|end"
                android:textColor="@color/sub_text_color"
                android:textSize="12dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/conversation_last_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_title_root"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111111"
            android:textColor="@color/sub_text_color"
            android:textSize="14dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_important"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="2dp"
        android:src="@drawable/icon_important"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/ViewLineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/layout_content" />

</androidx.constraintlayout.widget.ConstraintLayout>